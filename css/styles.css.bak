.project-media .media-item img,
.project-media .media-item .gif-media {
    width: 100%;
    height: auto;
    object-fit: contain;
    display: block;
    overflow: auto;
}

.gif-media {
    width: 100%;
    height: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    object-fit: contain;
    max-width: 100%;
    display: block;
}

/* Image Modal Styles */
.image-modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    backdrop-filter: blur(5px);
}

.modal-content {
    margin: auto;
    display: block;
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.close-modal {
    color: #f1f1f1;
    font-size: 40px;
    font-weight: bold;
    position: absolute;
    top: 15px;
    right: 35px;
    cursor: pointer;
    z-index: 1001;
    transition: color 0.3s ease;
}

.close-modal:hover,
.close-modal:focus {
    color: #bbb;
    text-decoration: none;
}

.clickable-image {
    cursor: pointer;
    transition: opacity 0.3s ease;
}

.clickable-image:hover {
    opacity: 0.8;
}

figcaption {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 0.75rem;
    color: #666;
    text-align: left;
    margin-top: 0.5rem;
    font-weight: 400;
    max-width: 400px;
    width: 100%;
    line-height: 1.4;
}

figcaption a {
    color: #666;
    text-decoration: none;
    font-weight: 400;
}

figcaption a:hover {
    color: #333;
    text-decoration: none;
}

/* Nav2 Logo Specific Sizing */
.nav2-logo {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    width: auto;
    height: auto;
}

/* WIP Button Styling */
.wip-button {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: #f8f9fa;
    color: #666;
    text-decoration: none;
    border: 1px solid #dee2e6;
    border-radius: 2.5px;
    font-size: 1rem;
    font-weight: 400;
    cursor: default;
    transition: background-color 0.2s ease;
    min-width: 80px;
    text-align: center;
}

.wip-button:hover {
    background-color: #e9ecef;
    color: #666;
}